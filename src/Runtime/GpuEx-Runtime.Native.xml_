<?xml version="1.0" encoding="utf-8"?>
<ProjectSchemaDefinitions
    xmlns="clr-namespace:Microsoft.Build.Framework.XamlTypes;assembly=Microsoft.Build.Framework"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <Rule Name="CudaRuntime" PageTemplate="tool" DisplayName="CUDA Runtime" Order="22">
    <Rule.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="CudaRuntime" />
    </Rule.DataSource>

    <Rule.Categories>
      <Category Name="General" DisplayName="General" />
    </Rule.Categories>

    <Rule.Properties>
      <EnumProperty
          Name="CudaArchitecture"
          DisplayName="CUDA Architecture"
          Category="General"
          Description="Select the CUDA Architecture to target">

        <EnumValue
            Name="archCpu"
            DisplayName="cpu"
            Switch="cpu" />

        <EnumValue
            Name="arch11"
            DisplayName="compute_11"
            Switch="11" />

        <EnumValue
            Name="arch20"
            DisplayName="compute_20"
            Switch="20" />

        <EnumValue
            Name="arch25"
            DisplayName="compute_25"
            Switch="25" />

        <EnumValue
            Name="arch30"
            DisplayName="compute_30"
            Switch="30" />

        <EnumValue
            Name="arch35"
            DisplayName="compute_35"
            Switch="35" />
      </EnumProperty>
    </Rule.Properties>
  </Rule>
</ProjectSchemaDefinitions>
