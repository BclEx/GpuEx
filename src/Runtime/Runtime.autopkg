nuget {
	nuspec {
		id = GpuEx-Runtime;
		version: 1.0.0.0;
		title: GpuEx Runtime;
		authors: {Contoso};
		owners: {Contoso};
		licenseUrl: "http://www.opensource.org/licenses/mit-license.php";
		requireLicenseAcceptance: false;
		summary: GpuEx Runtime;
		description: "This package contains GPU data structures, and should be used as a simple runtime.";
		releaseNotes: "";
		projectUrl: "https://github.com/BclEx/GpuEx";
		iconUrl: "https://github.com/BclEx/GpuEx";
		copyright: Copyright 2010;
		tags: { native, cuda, gpu, gpgpu, datastructures, runtime };
	};

	files {
		include: { *.h };

		// The release here works for any config that contains release
		// Examples : Release ENU,  RELEASE-ENU,  Release DEU
		[x64,v110,release] {
			lib:     { Release\*.lib; }
			symbols: { Release\*.pdb; }
			bin:     { Release\*.dll; }
		};

		// The debug here works for any config that contains debug
		// Examples : Debug ENU,  DEBUG-ENU,  Debug DEU
		[x64,v110,debug] {
			lib:     { Debug\*.lib;  }
			symbols: { Debug\*.pdb; }
			bin:     { Debug\*.dll; }
		};
	};
}